    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Cursor Follow Script -->
    <script>
        const cursor = document.getElementById('cursor');

        // Smooth Cursor Follow Effect
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = `${e.pageX}px`;
            cursor.style.top = `${e.pageY}px`;
            cursor.classList.remove('hidden');

            // Create jet trail element
            const trail = document.createElement('div');
            trail.className = 'trail';
            trail.style.left = `${e.pageX}px`;
            trail.style.top = `${e.pageY}px`;
            document.body.appendChild(trail);

            // Remove trail after fading out
            setTimeout(() => {
                trail.style.opacity = '0';
                trail.style.transform = 'scale(2)'; // Expands the trail for jet-like effect
                setTimeout(() => trail.remove(), 800);
            }, 50);
        });

        // Hide Cursor When Leaving the Screen
        document.addEventListener('mouseleave', () => {
            cursor.classList.add('hidden');
        });

        // Cursor Click Effect
        document.addEventListener('mousedown', () => {
            cursor.classList.add('click');
        });

        document.addEventListener('mouseup', () => {
            cursor.classList.remove('click');
        });
    </script>
