        /* Custom Cursor Follow Effect */
        .cursor {
            position: fixed;
            width: 20px;
            height: 20px;
            background-color: #f2eeec; /* Changed to orange */
            border-radius: 50%;
            pointer-events: none;
            transform: translate(-50%, -50%);
            z-index: 9999;
            transition: transform 0.3s ease, opacity 0.3s ease, background-color 0.3s ease;
        }

        /* Cursor Click Effect */
        .cursor.click {
            transform: scale(1.5);
            background-color: #130202; /* Red on click */
        }

        /* Jet Trail Effect */
        .trail {
            position: fixed;
            width: 5px;
            height: 5px;
            background-color: #efecea; /* Same as cursor color */
            border-radius: 50%;
            pointer-events: none;
            opacity: 1;
            z-index: 9998;
            box-shadow: 0 0 10px #ff6600, 0 0 20px #ff6600; /* Glow effect for jet trail */
            transition: opacity 0.8s ease-out, transform 0.8s ease-out;
        }
    </style>
