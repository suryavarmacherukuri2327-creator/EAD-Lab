    <!-- Bootstrap 5.3 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const galleries = {
            'library': { index: 0, count: 4 },
            'labs': { index: 0, count: 4 },
            'sports': { index: 0, count: 4 }
        };

        function moveGallery(galleryId, direction) {
            const gallery = galleries[galleryId];
            const wrapper = document.querySelector(`.gallery-image-wrapper[data-gallery-id="${galleryId}"]`);
            
            gallery.index += direction;
            if (gallery.index < 0) {
                gallery.index = gallery.count - 1;
            } else if (gallery.index >= gallery.count) {
                gallery.index = 0;
            }

            const offset = -gallery.index * 100;
            wrapper.style.transform = `translateX(${offset}%)`;
        }
    </script>
